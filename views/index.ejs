  <form action="users/userinterface" method="post" enctype="multipart/form-data">
  <div class="modal fade" id="register" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <img src="images/student.jpeg" width="60px" height="40px" style="padding-right: 1rem;">
          <h5 class="modal-title" id="exampleModalLabel">New Student Registration</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <div class="row">

            <div class="col-6">
              <label for="recipient-name" class="col-form-label">Name:</label>
              <input type="text" name="name" required pattern="[a-z A-Z]+" placeholder="Enter Your Name" class="form-control" id="recipient-name">
            </div>
            <div class="col-6">
              <label for="message-text" class="col-form-label">Enrollment ID:</label>
              <input type="text" name="eid" required pattern="[A-Z0-9]{12}" placeholder="Enter Enrollment Number" class="form-control" id="recipient-name">

            </div>
            <div class="col-6">
              <label for="message-text" class="col-form-label">College Email ID:</label>
              <input type="email" name="email" required placeholder="Enter Official Mail ID" class="form-control" id="recipient-name">

            </div>
            <div class="col-6">
              <label for="recipient-name" class="col-form-label">Course:</label>
              <input type="text" name="course" required pattern="[A-Za-z]+" placeholder="Enter Course Name" class="form-control" id="recipient-name">
            </div>
            <div class="col-6">
              <label for="message-text" class="col-form-label">Course Year:</label>
              <input type="text" name="courseyear" required pattern="[0-4]"  placeholder="Enter Course Year" class="form-control" id="recipient-name">

            </div>
            <div class="col-6">
              <label for="recipient-name" class="col-form-label">Mobile Number:</label>
              <input type="tel" name="mobile" required pattern="[1-9]{1}[0-9]{9}" placeholder="Enter Mobile Number" class="form-control" id="recipient-name">
            </div>

            <div class="col-12">
              <label for="message-text" class="col-form-label">Picture:</label>
              <input type="file" name="image" id="image" accept="image" placeholder="Upload Picture Here" class="form-control">
            </div>
           
            <div class="col-12">
              <label for="message-text" class="col-form-label">Password:</label>
              <input type="password" name="password" id="password" required pattern="^(?=.*?[A-Z])(?=.*?[a-z])(?=.*?[0-9])(?=.*?[#?!@$%^&*-]).{8,}$"  title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters"   placeholder="Enter Your Password" class="form-control">
            </div>

            <div class="col-12" >
              <input type="checkbox" id="checkbox" >
              <label for="message-text" class="col-form-label"> Show Password</label>
            </div>
            
          <!-- </div> -->
          <div class="modal-footer mb-3 ">
            <button type="submit"   class="btn btn-info btn-hover">Submit</button>
          </div>


         </div> 
        </div> 
      </div>
    </div>
  </div>
